<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mt-4 mb-3",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <div id="movies">
        <% if @movies %>
          <% @movies.each do |movie| %>
            <h4><%= movie.title %></h4>
            <p><%= movie.synopsis %></p>
          <% end %>
        <% else %>
          <% @results.each do |res| %>
            <h4><%= res.searchable.title %></h4>
            <p><%= res.searchable.synopsis %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
